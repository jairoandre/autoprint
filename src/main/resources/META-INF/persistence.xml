<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

  <persistence-unit name="persistence" transaction-type="RESOURCE_LOCAL">

    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>br.com.vah.autoprint.entities.ControleImpressaoOS</class>
    <class>br.com.vah.autoprint.entities.ControleImpressaoPrevisaoOS</class>
    <class>br.com.vah.autoprint.entities.SolicitacoesPendentes</class>
    <class>br.com.vah.autoprint.entities.SolicitacoesPreventivas</class>
    <class>br.com.vah.autoprint.entities.dbamv.Solicitacao</class>
    <class>br.com.vah.autoprint.entities.dbamv.Bens</class>
    <class>br.com.vah.autoprint.entities.dbamv.Localidade</class>
    <class>br.com.vah.autoprint.entities.dbamv.Manutencao</class>
    <class>br.com.vah.autoprint.entities.dbamv.MotivoServico</class>
    <class>br.com.vah.autoprint.entities.dbamv.Oficina</class>
    <class>br.com.vah.autoprint.entities.dbamv.Setor</class>
    <class>br.com.vah.autoprint.entities.dbamv.TipoSolicitacao</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="oracle.jdbc.driver.OracleDriver"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
      <property name="hibernate.show_sql" value="false"/>
      <property name="hibernate.format_sql" value="false"/>
      <property name="hibernate.generate_statistics" value="false"/>
    </properties>

  </persistence-unit>

</persistence>